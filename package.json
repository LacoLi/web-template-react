{
  "name": "web-app-mono",
  "packageManager": "yarn@3.2.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "───── USER ─────": "",
    "[ START USER ]": "",
    "user-start": "cd packages/web && react-scripts start",
    "user-start:dev": "cd packages/web && env-cmd -f .env.dev react-scripts start",
    "user-start:prod": "cd packages/web && env-cmd -f .env.prod react-scripts start",
    "user-start:test": "cd packages/web && env-cmd -f .env.test react-scripts start",
    "[ BUILD USER ]": "",
    "user-build": "cd packages/web && react-scripts build",
    "user-build:dev": "cd packages/web && env-cmd -f .env.dev react-scripts build",
    "user-build:prod": "cd packages/web && env-cmd -f .env.prod react-scripts build",
    "user-build:test": "cd packages/web && env-cmd -f .env.test react-scripts build"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^29.0.0",
    "env-cmd": "^10.1.0",
    "react-scripts": "5.0.1",
    "sass": "^1.53.0",
    "typescript": "^4.7.4"
  }
}
